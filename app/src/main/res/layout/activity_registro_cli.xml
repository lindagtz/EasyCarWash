<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_background"
    tools:context="lindagtz.co.easycarwash.RegistroCliente">


    <Button
        android:text="Guardar"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginBottom="68dp"
        android:id="@+id/regGuardar"
        android:background="#90CAF9"></Button>

    <Button
        android:text="Cancelar"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/regGuardar"
        android:layout_alignEnd="@+id/edDireccionc"
        android:layout_marginEnd="41dp"
        android:id="@+id/regCancelar"
        android:background="#90CAF9"></Button>

    <TextView
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/edDireccionc"
        android:layout_marginBottom="10dp"
        android:id="@+id/txtperm"
        android:textColor="@color/cast_expanded_controller_ad_container_white_stripe_color" />

    <TextView
        android:text="Por favor, llena el siguiente formulario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textColor="@color/start"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/edNamec" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#0288D1"
        android:id="@+id/edPasswordc"
        android:layout_marginEnd="15dp"
        android:layout_above="@+id/edDireccionc"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp" />

    <TextView
        android:text="Nombre:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:textColor="#ffff"
        android:layout_marginTop="47dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Contraseña:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:layout_marginTop="116dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Correo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="37dp" />

    <TextView
        android:text="Dirección:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:id="@+id/textView8"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#0288D1"
        android:id="@+id/edNamec"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/edPasswordc" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inpemail"
        android:textColorHint="@color/cast_expanded_controller_text_color"
        android:layout_alignTop="@+id/textView5"
        android:hint="Email"
        android:layout_alignStart="@+id/edNamec">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="#0288D1"
            android:id="@+id/edEmailc"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignStart="@+id/edNamec" />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#0288D1"
        android:id="@+id/edDireccionc"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/inpemail" />

</RelativeLayout>
