<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lindagtz.co.easycarwash.Acercade">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <TextView
        android:text="Acerca de Easy CarWash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:gravity="center_horizontal"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:text="Ésta aplicación fue desarrollada por la alumna Linda Flor Gutiérrez Sánchez de la Universidad Tecnológica de Tecámac para la materia de Integradora."
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/textView28"
        android:textStyle="normal|bold|italic"
        android:gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentStart="true" />

</RelativeLayout>
</ScrollView>